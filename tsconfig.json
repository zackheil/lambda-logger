{
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "esModuleInterop": true,
      "removeComments": true,
      // "lib": ["esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "dist",
      "paths": {
        "*": ["node_modules/*", "src/compiler/*"]
      },
      "sourceMap": false,
      "strict": true,
      "target": "es6",
    //   "types": ["jest"]
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "tests", "**/*.tests.ts", "dist"]
  }
  